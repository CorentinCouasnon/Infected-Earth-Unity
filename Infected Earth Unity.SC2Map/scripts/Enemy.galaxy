bool EnemyGroupAttack(bool testConds, bool runActions)
{
    UnitGroupIssueOrder(gv_enemiesGroup, OrderTargetingUnit(AbilityCommand("attack", 0), gv_playerData.heroUnit), c_orderQueueReplace);
    return true;
}

void EnemyInitialize()
{
    TriggerAddEventTimePeriodic(TriggerCreate("EnemyGroupAttack"), 0.025, c_timeGame);
}